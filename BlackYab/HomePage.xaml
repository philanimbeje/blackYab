                                <Button x:Name="btnPDFGeneral" Content="Download PDF" HorizontalAlignment="Left" Margin="1110,355,0,0" VerticalAlignment="Top" Width="86"/>
                                <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="1186" Height="309"/>

