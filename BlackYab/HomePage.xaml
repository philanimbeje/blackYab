                        </Button.Background>
                    </Button>
                    <Button x:Name="buttonEditInstitution" Content="Edit Institution" HorizontalAlignment="Left" Margin="1085,166,0,0" VerticalAlignment="Top" Width="112"  BorderBrush="White" Foreground="White">
